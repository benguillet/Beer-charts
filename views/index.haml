!!!
%html 
  %head  
    %link(rel="stylesheet" type="text/css" href="css/bootstrap.css")
    %link(rel="stylesheet" type="text/css" href="css/main.css")
    %title Ae charts  
  %body
    %div{:class => "container"}
      -if locals[:logged] == false
        %div{:class => "row well span4 offset3"}

          %input{:type  => "text",  :name => "login", 
                 :class => "span4", :placeholder => "Login", :id => "login"}
                   
          %input{:type => "password", :name => "mdp",   
                 :class => "span4",   :placeholder => "password", :id => "password"}

          %input{:type => "submit", :value => "Send", :id => "submit_form", :class => "btn btn-success" }

        %div{:class => "row span4 offset3"}
          -if not locals[:error].nil?
            %H4 #{locals[:error]}

    %script{:type => "text/javascript",
            :src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" }
    %script{:type => "text/javascript", :src => "https://www.google.com/jsapi" }
    %script{:type => "text/javascript", :src => "js/main.js" }