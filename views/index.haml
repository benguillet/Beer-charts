!!!
%html 
  %head  
    %link(rel="stylesheet" type="text/css" href="css/bootstrap.css")
    %link(rel="stylesheet" type="text/css" href="css/main.css")
    %scripts{:type => "text/javascript", 
             :src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" }
    %scripts{:type => "text/javascript", :src => "js/main.js" }
    %title Ae charts  
  %body
    %div{:class => "container"}
      -if locals[:logged] == false
        %div{:class => "row well span4 offset3"}
          %form{:action => "/", :method => "post" }
          
            %input{:type  => "text", :name => "login", 
                   :class => "span4", :placeholder => "Login" }
                   
            %input{:type => "password", :name => "mdp",   
                   :class => "span4",    :placeholder => "password" }

            %input{:type => "submit",   :value => "Send", :class => "btn btn-success" }
        %div{:class => "row span4 offset3"}
          -if not locals[:error].nil?
            %H4 #{locals[:error]}

  -if not locals[:data].nil?
    :javascript
      var data = #{locals[:data]}
